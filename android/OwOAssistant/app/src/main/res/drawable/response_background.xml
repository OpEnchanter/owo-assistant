<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Glow layer (bigger + translucent) -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FF0adaef"
                android:endColor="#FF0affaa"
                android:angle="0"/>
            <corners
                android:topLeftRadius="40dp"
                android:topRightRadius="40dp"
                />
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="0dp"/>
        </shape>
    </item>

    <!-- Main box -->
    <item android:left="0.05dp" android:top="0.05dp" android:right="0.05dp" android:bottom="0.05dp">
        <shape android:shape="rectangle">
            <solid android:color="#FF000000"/>
            <corners
                android:topLeftRadius="39dp"
                android:topRightRadius="39dp"
                />
        </shape>
    </item>

    <item android:left="0.05dp" android:top="225dp" android:right="0.05dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FF0afaef"
                android:centerColor="#6a0afaef"
                android:endColor="#00000000"
                android:angle="90"/>
        </shape>
    </item>
</layer-list>