<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Glow layer (bigger + translucent) -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#7b8186"
                android:endColor="#43484d"
                android:angle="-45"/>
            <corners android:radius="400dp"/>
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp"/>
        </shape>
    </item>

    <!-- Main box -->
    <item android:left="0.05dp" android:top="0.05dp" android:right="0.05dp" android:bottom="0.05dp">
        <shape android:shape="rectangle">
            <solid android:color="#2a2e33"/>
            <corners android:radius="400dp"/>
        </shape>
    </item>

</layer-list>